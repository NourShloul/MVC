@model List<string[]>
@{
    ViewBag.Title = "User shop";
}

<h2>Products</h2>

<div>
    @foreach (var product in Model)
    {
        <div class="card" style="width: 18rem; border: 1px solid #ccc; display:flex; position:fixed">
            <img src="@product[1]" alt="@product[0]" class="card-img-top" />
            <div class="card-body">
                <h3 class="card-title">@product[0]</h3>
                <p class="card-text">Price: $@product[2]</p>
                <a href="#" class="btn btn-primary">Buy</a>
                <a href="#" class="btn btn-primary">Add to cart</a>
            </div>
        </div>
    }
</div>

