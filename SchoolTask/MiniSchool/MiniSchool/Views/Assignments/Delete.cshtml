@model MiniSchool.Models.Assignment

@{
    ViewBag.Title = "Delete Assignment";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Delete Assignment</h2>

    <h3 class="text-danger">Are you sure you want to delete this assignment?</h3>
    <div class="card shadow-sm p-4">
        <h4 class="card-title">Assignment Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Class.ClassName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Class.ClassName)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DueDate)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
