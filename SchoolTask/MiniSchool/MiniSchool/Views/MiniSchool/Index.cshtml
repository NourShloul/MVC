@{
    ViewBag.Title = "Dashboard";
}

<h2 class="text-center text-primary my-5">Dashboard</h2>

<!-- Bootstrap and Tailwind Links -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">

<!-- Display Classes and Subjects -->
<div class="container">
    <div class="row">
        <!-- Display Classes -->
        <div class="col-md-6 mb-4">
            <h3 class="text-info">Classes</h3>
            <div class="row g-3">
                @foreach (var classItem in ViewBag.Classes)
                {
                    <div class="col-md-12">
                        <div class="card p-4 shadow-sm">
                            <h5 class="card-title text-dark">@classItem.ClassName</h5>
                            <p class="card-text text-muted">Manage students and assignments for this class.</p>
                            <div class="d-flex gap-3">
                                <a href="@Url.Action("Index", "Students", new { classId = classItem.ClassId })" class="btn btn-primary">Show Students</a>
                                <a href="@Url.Action("Index", "Assignments", new { classId = classItem.ClassId })" class="btn btn-secondary">Assignments</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Display Static Card for Subjects -->
        <div class="col-md-6 mb-4">
            <h3 class="text-info">Subjects</h3>
            <div class="card p-4 shadow-sm">
                <h5 class="card-title text-dark">Subjects</h5>
                <p class="card-text text-muted">View and manage subjects across different classes.</p>
                <a href="@Url.Action("Index", "Subjects")" class="btn btn-info">Show Subjects</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* General styling */
    body {
        background-color: #f4f7fc;
        font-family: 'Roboto', sans-serif;
    }

    h2 {
        font-size: 2.5em;
        font-weight: bold;
        color: #007bff;
    }

    h3 {
        font-size: 1.75em;
        font-weight: 600;
    }

    .card {
        background-color: #fff;
        border: none;
        border-radius: 1em;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-size: 1.5em;
        font-weight: 600;
        margin-bottom: 0.5em;
    }

    .card-text {
        font-size: 0.95em;
        color: #6c757d;
    }

    .btn {
        border-radius: 30px;
        padding: 0.6em 1.5em;
        font-weight: 500;
        font-size: 0.9em;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn:hover {
        opacity: 0.9;
    }

    .container {
        margin-top: 3em;
    }
</style>
