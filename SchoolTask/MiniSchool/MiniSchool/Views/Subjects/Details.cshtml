@model MiniSchool.Models.Subject

@{
    ViewBag.Title = "Subject Details";
}

<h2 class="text-center text-primary my-4">Subject Details</h2>

<div class="bg-light p-4 rounded shadow-sm">
    <h4 class="text-info">Subject Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning px-4 me-2" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    .text-info {
        color: #17a2b8;
        font-weight: bold;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
