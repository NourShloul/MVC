@model MiniSchool.Models.Subject

@{
    ViewBag.Title = "Edit Subject";
}

<h2 class="text-center text-primary my-4">Edit Subject</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg-light p-4 rounded shadow-sm">
        <h4 class="text-info">Edit Subject Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Save" class="btn btn-success px-4 me-2" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    .text-info {
        color: #17a2b8;
        font-weight: bold;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
