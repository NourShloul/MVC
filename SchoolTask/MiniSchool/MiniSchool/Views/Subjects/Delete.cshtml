@model MiniSchool.Models.Subject

@{
    ViewBag.Title = "Delete Subject";
}

<h2 class="text-center text-danger my-4">Delete Subject</h2>

<h3 class="text-warning text-center">Are you sure you want to delete this?</h3>
<div class="bg-light p-4 rounded shadow-sm">
    <h4 class="text-info">Subject Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Delete" class="btn btn-danger px-4 py-2" />
            <span class="mx-2">|</span>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
