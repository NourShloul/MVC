@model MiniSchool.Models.Student

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center text-primary my-4">Create Student</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg-light p-5 rounded shadow-sm">
        <h4 class="text-info">Student Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Full Name Field -->
        <div class="form-group row my-3">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control border-primary" } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Age Field -->
        <div class="form-group row my-3">
            @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control border-success" } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Email Field -->
        <div class="form-group row my-3">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-warning" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Class DropDown Field -->
        <div class="form-group row my-3">
            @Html.LabelFor(model => model.ClassId, "Class", htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
            <div class="col-md-10">
                @Html.DropDownList("ClassId", null, htmlAttributes: new { @class = "form-control border-info" })
                @Html.ValidationMessageFor(model => model.ClassId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group row mt-4">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary px-4 py-2" />
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-horizontal {
        max-width: 700px;
        margin: auto;
    }

    h2 {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .form-control {
        border-width: 2px;
        border-radius: 10px;
        padding: 10px;
    }

    .form-group label {
        font-size: 1.2rem;
        font-weight: 500;
    }

    .text-info {
        color: #17a2b8;
        font-weight: bold;
    }
</style>
